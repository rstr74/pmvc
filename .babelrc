{
  "env": {

    "development": {

      "presets": [
        "es2015",
      ],

      "plugins": [
        "typecheck",
        "syntax-flow",
        "transform-flow-strip-types",
        "transform-class-properties",
        "transform-class-constructor-call"
      ]
    },

    "production": {

      "presets": [
        "es2015",
      ],

      "minified": false,
      "comments": false,

      "plugins": [
        "syntax-flow",
        "transform-flow-strip-types",
        "transform-class-properties",
        "transform-class-constructor-call",
        "transform-remove-console", [
          "transform-es2015-classes", {
            "loose": true
          }
        ],
        "add-module-exports"
      ]
    }
  }
}
